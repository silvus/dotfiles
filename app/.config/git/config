[include]
	path = ~/.gituser  # Deprecated
	path = ~/.dotfiles_custom/gitconfig
[color]
	ui = auto
[core]
	editor = vim
	autocrlf = input
	eol = lf
	excludesfile = ~/.config/git/gitignore_global
	quotepath = false
[alias]
	st = status
	s = status -sb
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	gr = grep -p
	aa = add --all
	co = commit -av
	pusom = push origin master
	pulom = pull origin master
	dif = diff --stat=160,120
[web]
	browser = elinks
[diff]
	tool = vimdiff
	submodule = log
[difftool]
	prompt = false
[credential]
	helper = cache
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[push]
	default = current
[pull]
	default = current
	rebase = true
[status]
	submoduleSummary = true
[user]
	useConfigOnly = true
[rebase]
	autoStash = true
