{
    "editor.fontSize": 12,
    "editor.renderWhitespace": "boundary",
    "editor.insertSpaces": false,
    "editor.dragAndDrop": false,
    "editor.minimap.enabled": false,
    "python.formatting.provider": "black",
    "python.autoComplete.extraPaths": [
        "__pypackages__/<major.minor>/lib"
    ],
    "python.analysis.extraPaths": [
        "__pypackages__/<major.minor>/lib"
    ],
    "workbench.tree.indent": 16,
    "workbench.list.horizontalScrolling": true,
    "editor.formatOnSave": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "markup.heading.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#8a8888",
                }
            },
            {
                "scope": "markup.heading.markdown heading.1.markdown entity.name.section.markdown",
                "settings": {
                    "foreground": "#71cafd",
                }
            },
            {
                "scope": "markup.heading.markdown heading.1.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#eb4848",
                }
            },
            {
                "scope": "markup.heading.markdown heading.2.markdown",
                "settings": {
                    "foreground": "#5da6cf",
                }
            },
            {
                "scope": "markup.heading.markdown heading.2.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#4ba521",
                }
            },
            {
                "scope": "markup.heading.markdown heading.3.markdown",
                "settings": {
                    "foreground": "#4982a3",
                }
            },
            {
                "scope": "markup.heading.markdown heading.3.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#5c91af",
                }
            },
            {
                "scope": "markup.heading.markdown heading.4.markdown",
                "settings": {
                    "foreground": "#417391",
                }
            },
            {
                "scope": "markup.heading.markdown heading.5.markdown",
                "settings": {
                    "foreground": "#2d4d5f",
                }
            },
            {
                "scope": "markup.heading.markdown heading.6.markdown",
                "settings": {
                    "foreground": "#263a4f",
                }
            },
            {
                "scope": "markup.quote.markdown",
                "settings": {
                    "foreground": "#6A9955",
                    "fontStyle": "italic",
                }
            },
            {
                "scope": "punctuation.definition.quote.begin.markdown",
                "settings": {
                    "foreground": "#8a8888",
                }
            },
            {
                "scope": "fenced_code.block.language.markdown",
                "settings": {
                    "foreground": "#772525",
                }
            },
            {
                "scope": "punctuation.definition.markdown",
                "settings": {
                    "foreground": "#8a8888",
                }
            },
            {
                "scope": "markup.fenced_code.block.markdown",
                "settings": {
                    "foreground": "#adadad",
                }
            },
            // Markdown checkboxes
            {
                "scope": "markup.list.unnumbered.markdown meta.link.reference.markdown punctuation.definition.string.begin.markdown",
                "settings": {
                    "foreground": "#71cafd",
                }
            },
            {
                "scope": "markup.list.unnumbered.markdown meta.link.reference.markdown punctuation.definition.string.end.markdown",
                "settings": {
                    "foreground": "#71cafd",
                }
            },
            {
                "scope": "markup.list.unnumbered.markdown meta.link.reference.markdown string.other.link.title.markdown",
                "settings": {
                    "foreground": "#6A9955",
                }
            },
        ]
    },
    "pasteImage.showFilePathConfirmInputBox": true,
    "pasteImage.defaultName": "YMMDD",
    "pasteImage.filePathConfirmInputBoxMode": "onlyName",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 12,
    "files.defaultLanguage": "markdown",
    "window.restoreWindows": "folders",
    "markdown.preview.breaks": true,
    "markdown.preview.lineHeight": 1.4,
    "markdown.extension.list.indentationSize": "inherit",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "extensions.ignoreRecommendations": true,
    "rust-client.rustupPath": "~/.config/cargo/bin/rustup",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
    ],
    "spellright.language": [
        "fr",
        "en_US",
    ],
    "spellright.notificationClass": "hint",
    "gutterpreview.imagePreviewMaxHeight": 200,
    "gutterpreview.sourceFolder": ".img",
    "rainbow_csv.enable_tooltip": false,
    "cSpell.enableFiletypes": [
        "makefile",
        "tsv"
    ],
    "cSpell.language": "en,fr",
    "security.workspace.trust.untrustedFiles": "open",
    "workbench.editor.enablePreview": false,
    "telemetry.telemetryLevel": "off",
    "pasteImage.insertPattern": "${imageSyntaxPrefix}/${imageFilePath}${imageSyntaxSuffix}",
    "pasteImage.namePrefix": "${currentFileNameWithoutExt}_",
    "window.titleBarStyle": "custom",
    "notebook.breadcrumbs.showCodeCells": false,
    "notebook.lineNumbers": "on",
    "notebook.showFoldingControls": "always",
    "notebook.dragAndDropEnabled": false,
    "window.confirmBeforeClose": "keyboardOnly",
    "editor.unicodeHighlight.invisibleCharacters": true,
    "editor.unicodeHighlight.ambiguousCharacters": true,
    "git.autofetch": true,
    "[lua]": {
        "editor.defaultFormatter": "sumneko.lua"
    },
    "editor.fontFamily": "'DejaVu Sans Mono', 'Droid Sans Mono', 'monospace', monospace",
}
