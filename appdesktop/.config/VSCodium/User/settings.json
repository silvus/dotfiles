{
    "editor.fontSize": 12,
    "editor.renderWhitespace": "boundary",
    "editor.insertSpaces": false,
    "editor.dragAndDrop": false,
    "editor.minimap.enabled": false,
    "files.autoSave": "off",
    "python.formatting.provider": "black",
    "workbench.tree.indent": 16,
    "workbench.list.horizontalScrolling": true,
    "editor.formatOnSave": true,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "markup.heading.markdown punctuation.definition.heading.markdown",
                "settings": {
                    "foreground": "#8a8888",
                }
            },
            {
                "scope": "heading.1.markdown entity.name.section.markdown",
                "settings": {
                    "foreground": "#71cafd",
                }
            },
            {
                "scope": "heading.2.markdown entity.name.section.markdown",
                "settings": {
                    "foreground": "#5da6cf",
                }
            },
            {
                "scope": "heading.3.markdown entity.name.section.markdown",
                "settings": {
                    "foreground": "#4982a3",
                }
            },
            {
                "scope": "heading.4.markdown entity.name.section.markdown",
                "settings": {
                    "foreground": "#417391",
                }
            },
            {
                "scope": "heading.5.markdown entity.name.section.markdown",
                "settings": {
                    "foreground": "#2d4d5f",
                }
            },
            {
                "scope": "heading.6.markdown entity.name.section.markdown",
                "settings": {
                    "foreground": "#263a4f",
                }
            },
            {
                "scope": "markup.quote.markdown",
                "settings": {
                    "foreground": "#6A9955",
                    "fontStyle": "italic",
                }
            },
            {
                "scope": "punctuation.definition.quote.begin.markdown",
                "settings": {
                    "foreground": "#8a8888",
                }
            },
            {
                "scope": "fenced_code.block.language.markdown",
                "settings": {
                    "foreground": "#772525",
                }
            },
            {
                "scope": "punctuation.definition.markdown",
                "settings": {
                    "foreground": "#8a8888",
                }
            },
            {
                "scope": "markup.fenced_code.block.markdown",
                "settings": {
                    "foreground": "#adadad",
                }
            },
        ]
    },
    "pasteImage.showFilePathConfirmInputBox": true,
    "pasteImage.basePath": "${currentFileDir}/.img",
    "pasteImage.path": "${currentFileDir}/.img",
    "pasteImage.insertPattern": "${imageSyntaxPrefix}.img/${imageFilePath}${imageSyntaxSuffix}",
    "pasteImage.defaultName": "YMMDD",
    "pasteImage.namePrefix": "${currentFileNameWithoutExt}_",
    "pasteImage.filePathConfirmInputBoxMode": "onlyName",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 12,
    "files.defaultLanguage": "markdown",
    "window.restoreWindows": "folders",
    "markdown.preview.breaks": true,
    "markdown.preview.lineHeight": 1.4,
    "markdown.extension.list.indentationSize": "inherit",
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "extensions.ignoreRecommendations": true,
    "rust-client.rustupPath": "~/.config/cargo/bin/rustup",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext",
    ],
    "spellright.language": [
        "fr",
        "en_US",
    ],
    "spellright.notificationClass": "hint",
    "gutterpreview.imagePreviewMaxHeight": 200,
    "gutterpreview.sourceFolder": ".img",
    "rainbow_csv.enable_tooltip": false,
    "cSpell.enableFiletypes": [
        "makefile",
        "tsv"
    ],
    "cSpell.language": "en,fr",
    "security.workspace.trust.untrustedFiles": "open",
}
