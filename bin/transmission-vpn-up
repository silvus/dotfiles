#!/usr/bin/env bash

# From https://protonvpn.com/support/port-forwarding-manual-setup
# Port is printed like: "Mapped public port 53XXX protocol UDP to local port 0 liftime 60"

tmux rename-window 'torrents'

# Horizontal split
tmux split-window -h
# Split each side
tmux split-window -v -t 1
tmux split-window -v -t 3

# Pane 1: transmission logs
tmux send-keys -t 1 "transmission-daemon --no-auth --port 9091 -f" C-m

# Pane 2: joal (http://192.168.1.20:9092/joal/ui/)
tmux send-keys -t 1 "java -jar /data/torrents/joal/jack-of-all-trades-2.1.36.jar --joal-conf=\"/data/torrents/joal/\" --spring.main.web-environment=true --server.port=9092 --joal.ui.path.prefix=\"joal\" --joal.ui.secret-token=\"SECRET_TOKEN\""

# Pane 3: Get port forwarding
tmux send-keys -t 2 "while true; do date; natpmpc -a 1 0 udp 60 -g 10.2.0.1 && natpmpc -a 1 0 tcp 60 -g 10.2.0.1 || { echo -e 'ERROR with natpmpc command \a'; break; }; sleep 45; done" C-m

# Pane 4: Enable WireGuard
tmux send-keys -t 3 "sudo wg-quick up torrent-NL" C-m
