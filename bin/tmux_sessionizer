#!/usr/bin/env bash

# Inspired from https://github.com/ThePrimeagen/.dotfiles/blob/master/bin/.local/scripts/tmux-sessionizer

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
	# tmux new-session -s $selected_name -c $selected
	echo 'Tmux is not running'
	exit 1
fi

main() {
	projects=''
	if [ -d "/data/dev" ]; then
		projects+=$(find /data/dev -mindepth 1 -maxdepth 1 -type d -not -name '.*' | sort)
	fi
	if [ -d "/data/prod" ]; then
		projects+=$(find /data/prod -mindepth 1 -maxdepth 1 -type d -not -name '.*' | sort)
	fi
	if [ -d "/data/projects" ]; then
		# More depth here
		projects+=$(find /data/projects -mindepth 1 -maxdepth 2 -type d -not -name '.*' | sort)
	fi
	
	complete_paths='main\n'
	if [ -d "$HOME/.dotfiles" ]; then
		complete_paths+="~/.dotfiles\n"
	fi
	if [ -d "/data/doc" ]; then
		complete_paths+="/data/doc\n"
	fi
	selected=$(echo -e "${complete_paths}${projects}" | fzf)

	if [[ -z $selected ]]; then
		exit 0
	fi

	selected_name=$(basename "$selected" | tr . _ | tr ' ' '_')
	selected="${selected/#\~/$HOME}"

	if ((SESSION_MODE)); then
		# Session mode
		if ! tmux has-session -t="$selected_name" 2> /dev/null; then
			tmux new-session -ds "$selected_name" -c "$selected"
		fi
		tmux switch-client -t "$selected_name"
	else
		# Window mode
		tmux new-window -t "main" -n "$selected_name" -c "$selected"
	fi

}


# Launch in window or session (default window)
SESSION_MODE=0

# Read args
while getopts ":ws" opt; do
	case $opt in
		s)
			SESSION_MODE=1
			;;
	esac
done

main
